<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#C7DBF8"
    tools:context=".CameraActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/homeClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/circleshape"
            app:srcCompat="@drawable/baseline_home_24"
            android:translationX="20dp"
            android:translationY="20dp"
            />
        <ImageView
            android:id="@+id/blackClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@drawable/circleshape"
            app:srcCompat="@drawable/baseline_close_24"
            android:translationY="-13dp"
            android:translationX="355dp"
            />

        <view
            android:id="@+id/previewView"
            class="androidx.camera.view.PreviewView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="20dp"
            android:layout_weight="9" />

        <Button
            android:id="@+id/captureCameraButton"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:onClick="capturePhotoButton"
            android:text="Capture" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>